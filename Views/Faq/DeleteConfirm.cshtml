@model SensenbrennerHospital.Models.FaqDto

@{
    ViewBag.Title = "Delete Faq";
}

<div class="viewContainer">
    <h2 class="viewTitle">Confirm delete FAQ</h2>

    <h3 class="formTitle">Are you sure you want to delete this question?</h3>
    <div>
        <dl class="customDL">
            <dt>
                @Html.DisplayNameFor(model => model.Question)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Question)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Answer)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Answer)
            </dd>

        </dl>

        @using (Html.BeginForm("Delete", "Faq", new { id = Model.FaqID }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "List")
            </div>
        }
    </div>
</div>