@model IEnumerable<SensenbrennerHospital.Models.DonationDto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Donate now", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DonationAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonationMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonationText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonationAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DonationID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DonationID }) |
                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.DonationID })
            </td>
        </tr>
    }

</table>
