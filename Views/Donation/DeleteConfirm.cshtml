@model SensenbrennerHospital.Models.Donation

@{
    ViewBag.Title = "Delete Donation";
}

<div class="viewContainer">
    <h2 class="viewTitle">Delete Donation</h2>

    <h3 class="formTitle">Are you sure you want to delete this donation?</h3>
    <div>
        <dl class="customDL">
            <dt>
                @Html.DisplayNameFor(model => model.DonationAmount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DonationAmount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DonationMethod)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DonationMethod)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DonationText)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DonationText)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DonationDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DonationDate)
            </dd>

        </dl>

        @using (Html.BeginForm("Delete", "Donation", new { id = Model.DonationID }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>