@model SensenbrennerHospital.Models.CategoryDto

@{
    ViewBag.Title = "Update Category";
}
<div class="viewContainer">
    <h2 class="viewTitle">Update Category</h2>

    @using (Html.BeginForm("Update", "Category", new { id = Model.CategoryID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="customForm">
            <h4 class="formTitle">Update Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoryID, new { Name = "CategoryID" })
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", Name = "CategoryName" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger", Name = "CategoryName" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "List")
    </div>
</div>