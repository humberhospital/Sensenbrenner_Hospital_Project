@model SensenbrennerHospital.Models.ViewModels.DeleteCategory

@{
    ViewBag.Title = "Delete Category";
}

<div class="viewContainer">
    <h2 class="viewTitle">Delete Category</h2>

    <h3 class="formTitle">Are you sure you want to delete this category?</h3>
    <div>
        <dl class="customDL">
            <dt>
                @Html.DisplayNameFor(model => model.category.CategoryName)
            </dt>
            <dd>
                @Model.category.CategoryName
            </dd>
        </dl>
        @if (Model.faqList.Count() != 0)
        {
            <hr />
            <h4>Deleting this category will also delete these questions</h4>
            <hr />
            <dl class="dl-horizontal">
                @foreach (var item in Model.faqList)
                {
                    <dt>
                        Question
                    </dt>
                    <dd>
                        @item.Question
                    </dd>
                }
            </dl>
        }


        @using (Html.BeginForm("Delete", "Category", new { id = Model.category.CategoryID }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "List")
            </div>
        }
    </div>
</div>