@model IEnumerable<SensenbrennerHospital.Models.CategoryDto>

@{
    ViewBag.Title = "Categories";
}

<div class="viewContainer">
    <h2 class="viewTitle">Categories</h2>

    <p>
        @Html.ActionLink("Create New Category", "Create")
    </p>
    <table class="customTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { id = item.CategoryID }) |
                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.CategoryID })
                </td>
            </tr>
        }

    </table>
</div>