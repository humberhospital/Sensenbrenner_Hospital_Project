@model IEnumerable<SensenbrennerHospital.Models.ViewModels.ListDoctor>

@{
    ViewBag.Title = "Doctors";
}

<div class="viewContainer">
    <h2 class="viewTitle">Doctors List</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="customTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Practice.PracticeName)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.Doctor.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Practice.PracticeName)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Update", new { id = item.Doctor.DoctorID }) |
                        @Html.ActionLink("Details", "DoctorDetails", new { id = item.Doctor.DoctorID }) |
                        @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.Doctor.DoctorID })
                    </td>
                }
            </tr>
        }

    </table>
</div>