@model IEnumerable<SensenbrennerHospital.Models.CareerDto>

@{
    ViewBag.Title = "Careers";
}

<div class="viewContainer">
    <h2>Career Postings</h2>
    @if (ViewBag.isadmin == true)
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }

    <table class="customTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CareerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareerPayRange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareerDescription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CareerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareerPayRange)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareerType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareerDescription)
                </td>
                @if (User.IsInRole("Admin"))
                {

                }
                <td>
                    @if (ViewBag.isadmin == true)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.CareerID })
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.CareerID })
                    @if (ViewBag.isadmin == true)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.CareerID })
                    }
                </td>
            </tr>
        }

    </table>
</div>