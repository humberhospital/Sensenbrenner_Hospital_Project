@model SensenbrennerHospital.Models.ViewModels.ShowVolunteerPosition

@{ 
    ViewBag.Title = Model.volunteerposition.Name;
}

<div class="viewContainer">
    <h2 class="viewTitle">@Html.DisplayFor(model => model.volunteerposition.Name)</h2>

    <div>
        <hr />

        <dl class="customDL">
            <dt>
                @Html.DisplayNameFor(model => model.volunteerposition.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.volunteerposition.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.department.DepartmentName)
            </dt>
            <dd>
                @Html.ActionLink(Model.department.DepartmentName, "Show", "Department", new { id = Model.volunteerposition.DepartmentID })
            </dd>

        </dl>
    </div>
    <div class="options">
        <div class="editlink">@Html.ActionLink("Delete", "DeleteConfirm", new { id = Model.volunteerposition.CvpID })</div>
        <span class="editlink backTwo"> @Html.ActionLink("Edit", "Edit", new { id = Model.volunteerposition.CvpID }) </span>
        <span class="editlink backOne"> @Html.ActionLink("Back to List", "List")</span>
    </div>
</div>