@model SensenbrennerHospital.Models.ViewModels.UpdateVolunteerPosition

@{
    ViewBag.Title = "Add Volunteer Position";
}

<div class="viewContainer">
    <h2 class="viewTitle">Add Volunteer Position</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="customForm">
            <h4 class="formTitle">New Volunteer Position</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.volunteerposition.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.volunteerposition.Name, new { htmlAttributes = new { @class = "form-control", Name = "Name" } })
                    @Html.ValidationMessageFor(model => model.volunteerposition.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.volunteerposition.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.volunteerposition.Description, new { htmlAttributes = new { @class = "form-control", Name = "Description" } })
                    @Html.ValidationMessageFor(model => model.volunteerposition.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Department</label>
                <div class="col-md-10">

                    <select class="dropD" name="DepartmentID">
                        @foreach (var department in Model.alldepartments)
                        {
                            <option value="@department.DepartmentID">@department.DepartmentName</option>
                        }
                    </select>
                </div>

                
            </div>
            <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="dropD" id="button" value="Create" />
                    </div>
                </div>
        </div>
    }

    <div class="dropD">
        @Html.ActionLink("Back to List", "List")
    </div>
</div>