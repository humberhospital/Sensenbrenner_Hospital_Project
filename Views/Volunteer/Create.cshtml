@model SensenbrennerHospital.Models.ViewModels.UpdateVolunteer

<head>
    //Stylesheets
    //
    <link rel="stylesheet" href="~/Content/Volunteers/create.css">
    //
    <link rel="stylesheet" href="~/Content/Site.css">
</head>

@using (Html.BeginForm())
{
    //This will set a hidden input field with value "_RequestVerificationToken"
    //The VolunteerController Create Method will look for this token
    //This helps secure the Create() method from being called from other pages.
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Create a Volunteer</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.volunteer.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.volunteer.FirstName, new { htmlAttributes = new { @class = "form-control", Name = "FirstName" } })
                @Html.ValidationMessageFor(model => model.volunteer.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.volunteer.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.volunteer.LastName, new { htmlAttributes = new { @class = "form-control", Name = "LastName" } })
                @Html.ValidationMessageFor(model => model.volunteer.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.volunteer.DepartmentID, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">

                <select class="dropD" name="DepartmentID">
                    @foreach (var department in Model.alldepartments)
                    {
                        <option value="@department.DepartmentID">@department.DepartmentName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="dropD" id="button" value="Create" />
                </div>
            </div>
        </div>
    </div>
}

<div class="dropD">
    @Html.ActionLink("Back to List", "List")
</div>